<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net, Version=2.0.11.0, Culture=neutral"/>
	</configSections>
	<appSettings>
		<!--file path, the timestamp is automatically added-->
		<add key="file" value="c:\tmp\PowerPosition.csv"/>
		<!--tick triggering the generation, in ms-->
		<add key="tick" value="5000"/>
		<add key="maxRetry" value="2"/>
	</appSettings>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
	</startup>
	<log4net>
		<appender name="Log" type="log4net.Appender.RollingFileAppender">
			<file value="C:\tmp\reading_service.log" />
			<preserveLogFileNameExtension value="true" />
			<appendToFile value="true" />
			<maxSizeRollBackups value="3" />
			<datePattern value=".yyyy-MM-dd" />
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="INFO" />
				<param name="LevelMax" value="FATAL" />
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] [%level] %logger - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="Log" />
		</root>
	</log4net>
</configuration>